<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniFindr_V2.Views.ProfilePage"
             xmlns:vm="clr-namespace:UniFindr_V2.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:ProfileViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Favourite Universities"
                    Clicked="GoToFavourites"/>
            <Button Text="Preferred Country"
                    Clicked="GoToCountrySelection"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>